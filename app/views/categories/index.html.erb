<h1>Categories</h1>
<% @categories.each do |category| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="http://www.megaicons.net/static/img/icons_sizes/53/135/256/default-icon-icon.png" alt="default image">
      <div class="caption text-center">
        <h3><%= link_to category.name, "#" %></h3>
      </div>
    </div>
  </div>
<% end %>

